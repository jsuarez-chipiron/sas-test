<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <fieldUpdates>
        <fullName>Update_Consent_Field</fullName>
        <field>GDPR_Consent__c</field>
        <literalValue>1</literalValue>
        <name>Update Consent Field</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
    </fieldUpdates>
    <rules>
        <fullName>Update consent for Email  FaceBook Twitter and Messanger</fullName>
        <actions>
            <name>Update_Consent_Field</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Update the Consent field to True , when case is created with Origin as Email , Facebook, Twitter and Facebook Messanger</description>
        <formula>OR(ISPICKVAL(Origin,&#39;Facebook&#39;),ISPICKVAL(Origin,&#39;Twitter&#39;),ISPICKVAL(Origin,&#39;Facebook Messenger&#39;),AND(ISPICKVAL(Origin,&#39;Email&#39;), CreatedById = $Label.SAS_Automation_Process_User_Id))</formula>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
