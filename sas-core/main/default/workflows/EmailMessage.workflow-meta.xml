    <fieldUpdates>
        <fullName>Increment_Email_Messages_Received</fullName>
        <field>Number_of_Email_Messages_Received__c</field>
        <formula>IF(ISBLANK(Parent.Number_of_Email_Messages_Received__c), 1, Parent.Number_of_Email_Messages_Received__c + 1)</formula>
        <name>Increment Email Messages Received</name>
