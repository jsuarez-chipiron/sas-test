<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata" fqn="identifyCustomerFromCase">
    <apiVersion>47.0</apiVersion>
    <isExposed>true</isExposed>
    <description>
        Component used to identify a customer based on a supplied search value, and connect the customer to a case.
        The component can only be places on the case record page.
    </description>
    <targets>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property name="showSearchOptions" type="Boolean" label="Show search options" />
            <objects>
                <object>Case</object>
            </objects>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>