<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Address_line_1__c</field>
        <field>Address_line_2__c</field>
        <field>Amount__c</field>
        <field>Bank_Account_Number__c</field>
        <field>Bank_Country__c</field>
        <field>Bank_Name__c</field>
        <field>BIC_Swift__c</field>
        <field>City__c</field>
        <field>Claim__c</field>
        <field>Company__c</field>
        <field>Country__c</field>
        <field>CreatedBy</field>
        <field>Currency__c</field>
        <field>Date_Time_sent_to_Accounting__c</field>
        <field>Date_Time_sent_to_Racer__c</field>
        <field>Date_of_Exchange_Calculation__c</field>
        <field>Date_of_Last_Approval_Date__c</field>
        <field>EuroBonus_Number__c</field>
        <field>EuroBonus_Points__c</field>
        <field>Exchange_Rate_SEK_to_currency__c</field>
        <field>IBAN__c</field>
        <field>LastModifiedBy</field>
        <field>Message__c</field>
        <field>Payee_Name__c</field>
        <field>Payee_reference__c</field>
        <field>Postal_Code__c</field>
        <field>RecordType</field>
        <field>Reopen_Date__c</field>
        <field>Settlement_amount_in_SEK__c</field>
        <field>Settlement_Status__c</field>
        <field>Stop_Date__c</field>
        <field>Voucher_Type__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Approvers</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Standard Approval</label>
        <name>Standard_Approval</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Approvers</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <booleanFilter>(1 AND 2) OR (3 AND 4) OR (5 AND 6) OR (7 AND 8)</booleanFilter>
            <criteriaItems>
                <field>Settlement__c.Amount__c</field>
                <operation>greaterThan</operation>
                <value>1000</value>
            </criteriaItems>
            <criteriaItems>
                <field>Settlement__c.Currency__c</field>
                <operation>equals</operation>
                <value>EUR</value>
            </criteriaItems>
            <criteriaItems>
                <field>Settlement__c.Amount__c</field>
                <operation>greaterThan</operation>
                <value>10000</value>
            </criteriaItems>
            <criteriaItems>
                <field>Settlement__c.Currency__c</field>
                <operation>equals</operation>
                <value>SEK</value>
            </criteriaItems>
            <criteriaItems>
                <field>Settlement__c.Amount__c</field>
                <operation>greaterThan</operation>
                <value>10100</value>
            </criteriaItems>
            <criteriaItems>
                <field>Settlement__c.Currency__c</field>
                <operation>equals</operation>
                <value>USD</value>
            </criteriaItems>
            <criteriaItems>
                <field>Settlement__c.Amount__c</field>
                <operation>greaterThan</operation>
                <value>800</value>
            </criteriaItems>
            <criteriaItems>
                <field>Settlement__c.Currency__c</field>
                <operation>equals</operation>
                <value>GPB</value>
            </criteriaItems>
        </entryCriteria>
        <label>Approval for high amounts</label>
        <name>Approval_for_high_amounts</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>POC for approval process</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Settlement__c.Amount__c</field>
            <operation>greaterThan</operation>
            <value>0</value>
        </criteriaItems>
        <criteriaItems>
            <field>Settlement__c.RecordType</field>
            <operation>equals</operation>
            <value>Monetary</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approve_Settlement</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Reject_Settlement</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Approval Process V1</label>
    <processOrder>2</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
